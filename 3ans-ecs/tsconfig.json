{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@3ans-ecs/core/*": ["src/core/*"],
      "@3ans-ecs/systems/*": ["src/systems/*"],
      "@3ans-ecs/components/*": ["src/components/*"],
      "@3ans-ecs/engine/*": ["src/engine/*"],
      "@3ans-ecs/events/*": ["src/events/*"]
    }
  },
  "include": ["src"]
}
